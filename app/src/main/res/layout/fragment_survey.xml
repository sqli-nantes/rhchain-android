<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/surveyFragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom = "12dp"
    android:paddingLeft= "12dp"
    android:paddingRight="12dp">


    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>


    <TextView
        android:text="@string/txt_question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtQ1"
        android:layout_weight="1"
        style="@style/txt_question" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDsQ1"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:visibility="visible"
            android:contentDescription="@string/descr_btn_unsatisfied"
            android:textAlignment="center"
            android:src="@drawable/ic_dissatisfied_neutral" />

        <!-- à rajouter la méthode android:onClick="onClick (laméthodeàécrire)"  pour enregistrer la valeur sélectionnés      -->

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNeQ1"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:visibility="visible"
            android:contentDescription="@string/descr_btn_neutral"
            android:textAlignment="center"
            android:src="@drawable/ic_neutral_neutral" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaQ1"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:visibility="visible"
            android:contentDescription="@string/descr_btn_satisfied"
            android:textAlignment="center"
            android:src="@drawable/ic_satified_neutral"/>

    </LinearLayout>

    <TextView
        android:text="@string/txt_question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtQ2"
        android:layout_weight="1"
        style="@style/txt_question" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_dissatisfied_neutral"
            android:id="@+id/btnDsQ2"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:visibility="visible"
            android:contentDescription="@string/descr_btn_unsatisfied"
            android:textAlignment="center"
            android:src="@drawable/ic_dissatisfied_neutral"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNeQ2"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:visibility="visible"
            android:contentDescription="@string/descr_btn_neutral"
            android:textAlignment="center"
            android:src="@drawable/ic_neutral_neutral" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaQ2"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:visibility="visible"
            android:contentDescription="@string/descr_btn_satisfied"
            android:textAlignment="center"
            android:src="@drawable/ic_satified_neutral"/>
    </LinearLayout>

    <TextView
        android:text="@string/txt_question3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtQ3"
        android:layout_weight="1"
        style="@style/txt_question"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_dissatisfied_neutral"
            android:id="@+id/btnDsQ3"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:visibility="visible"
            android:contentDescription="@string/descr_btn_unsatisfied"
            android:textAlignment="center"
            android:src="@drawable/ic_dissatisfied_neutral"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNeQ3"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:visibility="visible"
            android:contentDescription="@string/descr_btn_neutral"
            android:textAlignment="center"
            android:src="@drawable/ic_neutral_neutral" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaQ3"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:visibility="visible"
            android:contentDescription="@string/descr_btn_satisfied"
            android:textAlignment="center"
            android:src="@drawable/ic_satified_neutral"/>
    </LinearLayout>

    <Button
        android:text="@string/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submit_survey"
        style="@style/btn"
        tools:text="@string/btn_submit"
        android:contentDescription="@string/dscr_btn_submit"/>

</LinearLayout>
</ScrollView>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/resultFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".ButtonAdapter$ResultsFragment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:text="@string/txt_question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtQ1"
                tools:text="@string/txt_question1"
                android:contentDescription="@string/txt_question1"
                style="@style/txt_question"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dissatisfied_clicked"
                    android:id="@+id/ResultQ1"
                    android:layout_weight="1"
                    tools:ignore="ContentDescription"
                    android:contentDescription="@string/descr_btn_unsatisfied"/>

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_pie_chart"
                    android:id="@+id/pie1"
                    android:contentDescription="@string/descr_pie_chart"/>
            </LinearLayout>

            <TextView
                android:text="@string/txt_question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtQ2"
                tools:text="@string/txt_question2"
                android:contentDescription="@string/txt_question2"
                style="@style/txt_question"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_neutral_clicked"
                    android:id="@+id/ResultQ2"
                    android:layout_weight="1"
                    tools:ignore="ContentDescription"
                    android:contentDescription="@string/descr_btn_neutral"/>

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_pie_chart"
                    android:id="@+id/pie2"
                    android:contentDescription="@string/descr_pie_chart"/>

            </LinearLayout>

            <TextView
                android:text="@string/txt_question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtQ3"
                tools:text="@string/txt_question3"
                android:contentDescription="@string/txt_question3"
                style="@style/txt_question"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_neutral_clicked"
                    android:id="@+id/ResultQ3"
                    android:layout_weight="1"
                    tools:ignore="ContentDescription"
                    android:contentDescription="@string/descr_btn_neutral"/>

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_pie_chart"
                    android:id="@+id/pie3"
                    android:contentDescription="@string/descr_pie_chart"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>

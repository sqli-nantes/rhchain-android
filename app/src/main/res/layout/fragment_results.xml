<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:text="@string/txt_question1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtQ1"
            tools:text="@string/txt_question1"
            android:contentDescription="@string/txt_question1"
            style="@style/txt_question"/>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chartQ1"
            android:layout_width="match_parent"
            android:layout_height="100dp" />


        <TextView
            android:text="@string/txt_question2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtQ2"
            tools:text="@string/txt_question2"
            android:contentDescription="@string/txt_question2"
            style="@style/txt_question"/>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chartQ2"
            android:layout_width="match_parent"
            android:layout_height="100dp" />


        <TextView
            android:text="@string/txt_question3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtQ3"
            tools:text="@string/txt_question3"
            android:contentDescription="@string/txt_question3"
            style="@style/txt_question"/>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chartQ3"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    </LinearLayout>

</ScrollView>
